{{>header}}
<div class="container">
    <h1>Pintores</h1>
    {{#if pintores}}
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <td>ID</td>
                <td>nombre</td>
                <td>corriente</td>
                <td>pais</td>
                <td>imagen</td>
            </tr>
        </thead>
        <tbody>
            {{#each pintores}}
            <tr>
                <td>{{_id}}</td>
                <td>{{nombre}}</td>
                <td>{{corriente}}</td>
                <td>{{pais}}</td>
                <td><img src="../images/{{pintura}}" alt=""></td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    {{else}}
    <div>no hayn pintores</div>
    {{/if}}

</div>


{{>footer}}